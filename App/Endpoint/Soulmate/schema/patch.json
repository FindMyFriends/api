{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "is_correct": {
            "type": [
                "boolean"
            ]
        },
        "is_exposed": {
            "type": [
                "boolean"
            ]
        },
        "ownership": {
            "type": [
                "string"
            ],
            "enum": [
                "theirs",
                "yours"
            ]
        }
    },
    "type": "object",
    "anyOf": [
        {
            "required": [
                "is_correct"
            ]
        },
        {
            "required": [
                "is_exposed"
            ]
        }
    ]
}